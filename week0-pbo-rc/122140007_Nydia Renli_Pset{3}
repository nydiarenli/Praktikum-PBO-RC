with open("Me.txt", "w") as file:
    # Menulis nama
    nama = input("Masukkan nama : ")
    file.write("Nama : " + nama + "\n")

    
    nim = input("Masukkan NIM Anda: ")
    file.write("NIM : " + nim + "\n")

    
    resolusi = input("Apa resolusi kamu di tahun ini? ")
    file.write("Resolusi Saya di Tahun ini : " + resolusi + "\n")

print("File 'Me.txt' telah berhasil dibuat dan diisi.")
